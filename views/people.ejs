<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registered Users</title>
    <link rel="stylesheet" href="/css/math.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <style>
        /* Add spacing between columns */
        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 10px; /* Adds vertical space between rows */
        }

        th, td {
            padding: 10px 15px; /* Adds horizontal and vertical padding */
            text-align: left;
        }

        th {
            background-color: #f4f4f4;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9; /* Adds alternating row colors for better readability */
        }

        tr:hover {
            background-color: #e9ecef; /* Highlight row on hover */
        }
    </style>
</head>
<body>

    <!-- Header -->
    <header class="header">
        <div class="header-logo">
            <a href="/dashboard" style="text-decoration: none;"><h1>Mind<span>Wave</span></h1></a>
        </div>
        <div class="header-navigation-actions">
            <a href="/user-profile" class="button">User Profile</a>
            <a href="/user-profile" class="avatar">
                <img src="/assets/profile.jpg" alt="User Avatar" />
            </a>
        </div>
    </header>

    <div class="dashboard">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-menu">
                <a href="/dashboard">Dashboard</a>
                <a href="/courses">Courses</a>
                <a href="/people">People</a>
                <a href="/home">
                    <button class="btn-logout">Log Out</button>
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <h1>Registered Users</h1>
        
            <!-- User Table -->
            <table>
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>School Name</th>
                        <th>Profession</th>
                        <th>Phone</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (users.length > 0) { %>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.firstName %></td>
                                <td><%= user.lastName %></td>
                                <td><%= user.schoolName %></td>
                                <td><%= user.profession %></td>
                                <td><%= user.phone %></td>
                                <td><%= user.email %></td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6">No users found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2024 KeYCo Platform. All rights reserved.</p>
    </footer>

</body>
</html>
